# Production Environment Configuration
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=production

# Server
PORT=3001
HOST=0.0.0.0

# Database (use a secure PostgreSQL connection)
DATABASE_URL="postgresql://user:password@localhost:5432/botmanager?sslmode=require"

# JWT Authentication (generate secure random strings)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-64-char-minimum-secret-key-here
JWT_REFRESH_SECRET=your-64-char-minimum-refresh-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key for env vars (64 char hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-char-encryption-key-here

# CORS - Set to your frontend domain
CORS_ORIGIN=https://yourdomain.com

# Docker
DOCKER_SOCKET=/var/run/docker.sock

# Bots Storage
BOT_CODE_PATH=/var/lib/botmanager/bots

# Optional: Trusted Proxy IPs (comma-separated)
# TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8
